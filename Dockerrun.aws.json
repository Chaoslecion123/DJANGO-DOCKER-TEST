{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "POSTGRES_USER",
                    "value": "postgres"
                },
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "postgres"
                },
                {
                    "name": "POSTGRES_DB",
                    "value": "dbdjango2"
                },
                {
                    "name": "POSTGRES_PORT",
                    "value": 5432
                },
                {
                    "name": "POSTGRES_HOST",
                    "value": "localhost"
                }
            ],
            "essential": true,
            "image": "postgres:10.5",
            "memory": 100,
            "mountPoints": [
                {
                    "containerPath": "/var/lib/postgresql/data/",
                    "sourceVolume": "postgres_data"
                }
            ],
            "name": "postgres",
            "portMappings": [
                {
                    "containerPort": 5432,
                    "hostPort": 5432
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "DJANGO_SECRET_KEY",
                    "value": "(6vrr3a4sz#an!9rbuein@gt-v(n6s5p=(g!b^my=qe3+f6=wv"
                },
                {
                    "name": "DJANGO_ADMIN_URL",
                    "value": "admin"
                },
                {
                    "name": "DJANGO_SETTINGS_MODULE",
                    "value": "config.settings.production"
                },
                {
                    "name": "DJANGO_AWS_STORAGE_BUCKET_NAME",
                    "value": "comparteride-fernando-v2"
                }
            ],
            "essential": true,
            "links": [
                "postgres"
            ],
            "name": "django",
            "image": "chaoslecion/djangofer",
            "memory": 100,
            "portMappings": [
                {
                    "containerPort": 5000,
                    "hostPort": 5000
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "DOMAIN_NAME",
                    "value": "multicontainerdockertutorialfernando-env.eba-v84r7adf.us-east-1.elasticbeanstalk.com"
                }
            ],
            "essential": true,
            "links": [
                "django"
            ],
            "image": "caddy:latest",
            "memory": 100,
            "mountPoints": [
                {
                    "containerPath": "/root/.caddyv2",
                    "sourceVolume": "production_caddy"
                }
            ],
            "name": "caddy",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                },
                {
                    "containerPort": 443,
                    "hostPort": 443
                }
            ]
        }
    ],
    "volumes": [
        {
            "host": {
                "sourcePath": "postgres_data"
            },
            "name": "postgres_data"
        },
        {
            "host": {
                "sourcePath": "production_caddy"
            },
            "name": "production_caddy"
        }
    ]
}